{
  "name": "ansballard-ghpages",
  "version": "1.0.0",
  "description": "Github profile page for Aaron Ballard",
  "main": "index.html",
  "scripts": {
    "start": "firefox index.html",
    "build:md": "node ./scripts/build.js",
    "watch:md": "watch \"npm run build\" ./md/",
    "build:js": "browserify ./src/js/main.js -t [babelify] -o ./dist/bundle.js",
    "deploy:js": "browserify ./src/js/main.js -t [babelify] | uglifyjs --screw-ie8 > ./dist/bundle.js",
    "build:sw": "babel ./src/serviceworkers/cache.sw.js > ./cache.sw.js",
    "deploy:sw": "babel ./src/serviceworkers/cache.sw.js | uglifyjs --screw-ie8 > ./cache.sw.js",
    "build:css": "postcss -u postcss-import -u postcss-cssnext ./src/css/entry.css > ./dist/bundle.css",
    "predeploy:css": "trash ./dist/uncss.css",
    "deploy:css": "postcss -u postcss-import -u postcss-cssnext ./src/css/entry.css > ./dist/bundle.css",
    "postdeploy:css": "uncss -s ./dist/bundle.css ./index.html | cssnano > ./dist/uncss.css",
    "prepublish": "npm run build:md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ansballard/ansballard.github.com.git"
  },
  "author": "Aaron Ballard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ansballard/ansballard.github.com/issues"
  },
  "homepage": "https://github.com/ansballard/ansballard.github.com#readme",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "bluebird": "^3.3.1",
    "browserify": "^13.0.0",
    "cssnano-cli": "^1.0.3",
    "html-minifier": "^1.2.0",
    "marked": "^0.3.5",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "uglify-js": "^2.6.2",
    "uncss": "^0.13.0",
    "watch": "^0.17.1"
  }
}
